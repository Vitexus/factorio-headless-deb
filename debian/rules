#!/usr/bin/make -f

version = $(shell curl -s  "https://api.github.com/repos/wube/factorio-data/tags" | jq -r '.[0].name')
archive = "factorio_headless_x64_$(version).tar.xz"

%:
	dh $@

override_dh_prep:
	wget -c https://factorio.com/get-download/stable/headless/linux64 -O $(archive)
	dch -v $(version) "automated package build"
	dh_prep

override_dh_auto_build:
	dh_auto_build

override_dh_install:
	mkdir -p debian/factorio-headless/usr/share/games
	tar xf $(archive) -C debian/factorio-headless/usr/share/games
	rm  debian/factorio-headless/usr/share/games/factorio/data/core/fonts/DejaVuSans-Bold.ttf
	rm  debian/factorio-headless/usr/share/games/factorio/data/core/fonts/DejaVuSans.ttf
	rm  debian/factorio-headless/usr/share/games/factorio/data/core/fonts/DejaVuSansMono.ttf
	rm  debian/factorio-headless/usr/share/games/factorio/data/core/fonts/Lato-Bold.ttf
	rm  debian/factorio-headless/usr/share/games/factorio/data/core/fonts/Lato-Regular.ttf
	rm  debian/factorio-headless/usr/share/games/factorio/data/core/fonts/Lato-Semibold.ttf
	rm  debian/factorio-headless/usr/share/games/factorio/data/core/fonts/NotoSans-Bold.ttf
	rm  debian/factorio-headless/usr/share/games/factorio/data/core/fonts/NotoSans-Regular.ttf
	rm  debian/factorio-headless/usr/share/games/factorio/data/core/fonts/NotoSansArabic-Bold.ttf
	rm  debian/factorio-headless/usr/share/games/factorio/data/core/fonts/NotoSansArabic-Regular.ttf
	rm  debian/factorio-headless/usr/share/games/factorio/data/core/fonts/NotoSansHebrew-Bold.ttf
	rm  debian/factorio-headless/usr/share/games/factorio/data/core/fonts/NotoSansHebrew-Regular.ttf
	rm  debian/factorio-headless/usr/share/games/factorio/data/core/fonts/NotoSansThai-Bold.ttf
	rm  debian/factorio-headless/usr/share/games/factorio/data/core/fonts/NotoSansThai-Regular.ttf
	rm  debian/factorio-headless/usr/share/games/factorio/data/core/fonts/NotoMono-Regular.ttf
	touch debian/factorio-headless/usr/share/games/factorio/.lock
	chmod 666 debian/factorio-headless/usr/share/games/factorio/.lock
	touch debian/factorio-headless/usr/share/games/factorio/factorio-current.log
	chmod 666 debian/factorio-headless/usr/share/games/factorio/factorio-current.log
	dh_install
